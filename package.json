{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "imports": {
    "#src/*": "./src/*",
    "#types/*": "./src/shared/types/*",
    "#libs/*": "./src/shared/libs/*",
    "#mocks/*": "./mocks/*"
  },
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost",
    "docker:up": "docker compose --file ./docker-compose.yml --env-file ./.env --project-name=six-cities up -d"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "tslib": "2.6.2",
    "pino-pretty": "11.0.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "json-server": "^1.0.0-beta.2",
    "dayjs": "1.11.10",
    "got": "14.2.1",
    "pino": "9.0.0",
    "dotenv": "16.4.5",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "inversify": "6.0.2",
    "reflect-metadata": "0.2.2",
    "@typegoose/typegoose": "12.4.0",
    "mongoose": "8.3.4"
  }
}
